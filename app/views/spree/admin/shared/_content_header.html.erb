<div id="contentHeader" class="mb-0 pb-0 mt-4 col-12">
  <% if content_for?(:page_title) || content_for?(:page_actions) %>
    <div class="row align-items-center  <%= if content_for?(:page_tabs) then "pb-3" else "pb-3 mb-3" end %>">
      <% if content_for?(:page_title) %>
        <h2 class="mb-0 col">
          <%= yield :page_title %>
          <% if content_for?(:page_title_small) %>
            <small><%= yield :page_title_small %></small>
          <% end %>
        </h2>
      <% end %>

      <% if content_for?(:page_actions) %>
        <div class="page-actions d-none d-lg-flex col-auto" data-hook="toolbar">
          <%= yield :page_actions %>
        </div>

        <div class="d-flex d-lg-none justify-content-end m-0 col-auto">
          <button type="button"
                  id="contextual-menu-toggle"
                  class="btn btn-light icon-link">
                  <span class="d-none d-sm-inline">
                    <%= Spree.t('more') %>
                  </span>
                  <%= svg_icon name: "chevron-down.svg", width: '16', height: '16' %>
          </button>
        </div>
      <% end %>
    </div>

    <% if content_for?(:page_tabs) %>
      <div class="row my-2 mb-3 pb-1 pt-1 align-items-center" data-nav-x-wrapper>
        <div data-nav-x-container class="w-100 col">
          <ul id="spreePageTabs" class="nav nav-pills flex-nowrap" data-nav-x-content>
            <%= yield :page_tabs %>
          </ul>
        </div>

        <button class="nav-x_Advancer nav-x_Advancer_Left" type="button">
          <%= svg_icon name: "chevron-left.svg", width: '20', height: '20', classes: 'p-0 m-0' %>
        </button>

        <button class="nav-x_Advancer nav-x_Advancer_Right" type="button">
          <%= svg_icon name: "chevron-right.svg", width: '20', height: '20', classes: 'p-0 m-0' %>
        </button>
      </div>
    <% end %>
  <% end %>
</div>
